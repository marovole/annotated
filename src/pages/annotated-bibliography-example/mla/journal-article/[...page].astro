---
import BaseLayout from '../../../../layouts/BaseLayout.astro';
import ExampleCard from '../../../../components/ExampleCard.astro';
import Pagination from '../../../../components/Pagination.astro';
import Breadcrumb from '../../../../components/Breadcrumb.astro';
import { mlaExamples } from '../../../../data/examples';
import type { GetStaticPaths } from 'astro';

export const getStaticPaths = (({ paginate }) => {
  const journalExamples = mlaExamples.filter(e => e.sourceType === 'journal-article');
  return paginate(journalExamples, { pageSize: 8 });
}) satisfies GetStaticPaths;

const { page } = Astro.props;
const { data: examples } = page;

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Annotated Bibliography Example', href: '/annotated-bibliography-example/' },
  { label: 'MLA Examples', href: '/annotated-bibliography-example/mla/' },
  { label: 'Journal Articles', href: '/annotated-bibliography-example/mla/journal-article/' },
];

const title = `MLA Annotated Bibliography Example for Journal Articles${page.currentPage > 1 ? ` (Page ${page.currentPage})` : ''} | annotated.help`;
const description = "MLA annotated bibliography journal article examples. Copy and paste citations and annotations for academic journals.";
---

<BaseLayout title={title} description={description} pageType="source-type">
  <Breadcrumb items={breadcrumbs} />

  <h1 class="text-4xl font-extrabold tracking-tight text-slate-900 sm:text-5xl mb-6">
    MLA Annotated Bibliography Example for Journal Articles
  </h1>

  <p class="text-lg text-slate-600 mb-10 max-w-3xl">
    Browse our collection of MLA journal article citation examples. 
    Each entry includes a properly formatted citation and annotation.
  </p>

  <div class="space-y-8 mb-12">
    {examples.map(example => (
      <ExampleCard example={example} />
    ))}
  </div>

  <Pagination 
    currentPage={page.currentPage} 
    totalPages={page.lastPage} 
    baseUrl="/annotated-bibliography-example/mla/journal-article" 
  />

  <div class="mt-16 bg-slate-50 border border-slate-200 rounded-xl p-8">
    <h2 class="text-2xl font-bold text-slate-900 mb-4">Quick Template: Journal Article</h2>
    <div class="font-mono text-sm bg-white p-4 rounded border border-slate-200 text-slate-700 overflow-x-auto">
      Author(s). "Title of Article." <em>Title of Journal</em>, vol. #, no. #, Date, pp. #-#. <em>Database</em>, DOI or URL.
    </div>
    <p class="mt-4 text-slate-600">
      <strong>Note:</strong> Cite online journals with a DOI if available, otherwise use a URL. 
      Database names are italicized.
    </p>
  </div>

  <section class="mt-16 border-t border-slate-200 pt-10">
    <h2 class="text-2xl font-bold text-slate-900 mb-6">Related Examples</h2>
    <div class="flex gap-4 flex-wrap">
       <a href="/annotated-bibliography-example/mla/book/" class="text-blue-600 hover:underline">MLA Books</a>
       <a href="/annotated-bibliography-example/mla/website/" class="text-blue-600 hover:underline">MLA Websites</a>
       <a href="/annotated-bibliography-example/mla/" class="text-blue-600 hover:underline">All MLA Examples</a>
    </div>
  </section>
</BaseLayout>
